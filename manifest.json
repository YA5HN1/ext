{
  "manifest_version": 3,
  "name": "Gemini Video Analyzer",
  "version": "1.0",
  "description": "Analyze videos with Gemini API and transcribe audio",
  "permissions": [
    "activeTab",
    "contextMenus",
    "audioCapture"
  ],
  "host_permissions": [
    "https://api.assemblyai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
} 